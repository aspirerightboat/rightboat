%nav.navbar.navbar-default.nabvar-tools
  .container
    = form_tag search_path, method: :get, class: 'navbar-form navbar-left', role: "search" do
      = text_field_tag :q, params[:q], class: 'form-control', placeholder: "Quick Search"
      %i.icon.icon-search
    %ul.nav.navbar-nav.page-links
      %li= link_to 'Refine Search', '#', class: 'toggle-adv-search'
      %li= link_to 'Back', :back, class: 'return-prev'
      - if controller_name == 'search'
        %li= link_to 'Save this search', member_saved_searches_path(params.except(:controller, :action)), method: :post, data: { 'require-login' => true }, id: 'save-search'

    - unless local_assigns[:simple_search_bar]
      %ul.nav.navbar-nav.navbar-right.display-options
        /%li= link_to "Refine Results", '#'
        %li
          .navbar-text
            %span Sort by
            = select_tag :sort, sort_options, class: 'rb-select2-md select-general', id: 'sort-field'
        %li
          .navbar-text
            %span View
            = select_tag :sort, options_for_select([['Thumbnail', 'thumbnail'], ['Gallery', 'gallery'], ['List', 'list']], current_view_layout), id: 'view-mode'
