- content_for :header_text do
  .navbar-h My <strong>Rightboat</strong>

.member-content(data-view-layout='list')
  %h1 My Saved Searches
  %hr

  - if @saved_searches.none?
    %p You havent saved searches yet
  - else
    %p Click on the Alert button to toggle new listings alerts on/off

    %table.rb-table
      %tr
        %th Search
        %th Actions
        %th New listing
      - @saved_searches.each do |ss|
        %tr
          %td= ss.search_title
          %td
            = link_to 'Run', search_path(ss.to_search_params), class: 'label label-primary'
            = link_to 'Delete', member_saved_search_path(ss), class: 'label label-danger', method: :delete
          %td
            = link_to (ss.alert ? 'Alert' : 'No Alert'), toggle_member_saved_search_path(ss),
                      class: "label label-#{ss.alert ? 'success' : 'default'}", method: :post
