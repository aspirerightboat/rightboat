- member = @boat.user
.broker-info{ class: member.avatar? ? 'two-columns' : ''}
  - if member.avatar?
    .column
      = wicked_pdf_image_tag member.avatar_url
  .column
    %p Broker Details:
    %p
      %strong= member.name
      %br
      = member.address

    %p
      - unless member.phone.blank?
        = member.phone
        %br
      - unless member.mobile.blank?
        = member.mobile
        %br
      - unless member.fax.blank?
        = member.fax
        %br
      = mail_to member.email
      %br
      - unless member.company_weburl.blank?
        = link_to member.company_weburl
        %br
  .clearfix

- if @boat.primary_image
  = wicked_pdf_image_tag @boat.primary_image.file_url(:main)
  %hr

.row
  .col-xs-9
    %h1
      %b= @boat.manufacturer
      = @boat.model
    %h2= boat_price(@boat)
    %h2= @boat.year_built
  .col-xs-3.text-center.small
    = render_qr_code(boat_url(@boat))
    %p Scan to view boat online
%hr

.row
  %table.spec-table
    - @boat.spec_attributes(true).to_a.each_slice(2).each do |spec1, spec2|
      %tr
        %td(width="25%")
          %div
            %strong= spec1[0]
        %td(width="25%")
          %div= spec1[1]
        -if spec2
          %td(width="25%")
            %div
              %strong= spec2[0]
          %td(width="25%")
            %div= spec2[0]

%h1 Description
.boat-description= sanitize(@boat.description)

%hr
%h1 Images
.row
  - @boat.slave_images.each do |img|
    .col-xs-6
      .thumbnail= wicked_pdf_image_tag img.file_url(:thumb)
%hr