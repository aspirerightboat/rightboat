= form_tag user_registration_path, class: 'register-form', remote: true, data: {type: :json} do
  .row
    .col-sm-6.col-xs-12
      .form-group
        .rb-control-group
          .rb-control-group-addon
            = select_tag :title, options_for_select(User::TITLES, current_user.try(:title)), prompt: 'Title', class: 'select-title'
          .rb-control
            = text_field_tag :first_name, nil, placeholder: 'First name', class: 'form-control', 'data-validetta' => 'required'
    .col-sm-6.col-xs-12
      .form-group
        = text_field_tag :last_name, nil, placeholder: 'Last name', class: 'form-control', 'data-validetta' => 'required'
  #signup-email.form-group
    = email_field_tag :email, '', placeholder: 'Email', class: 'form-control', 'data-validetta' => 'required,email'
  .form-group
    = text_field_tag :username, '', placeholder: 'Username', class: 'form-control', 'data-validetta' => 'required,custom[username]'
  .form-group
    = password_field_tag :password, '', placeholder: 'Password', class: 'form-control', 'data-validetta' => 'required'
  .form-group
    = password_field_tag :password_confirmation, '', placeholder: 'Password confirmation', class: 'form-control', 'data-validetta' => 'required'
  .form-group
    %button.btn-flat(type="submit") Create Account
    %span.or Or
    %a(href="#" aria-label="Close" data-dismiss="modal") Cancel
