!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title Rightboat
    = favicon_link_tag "/favicon.png", type: 'image/png'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{id: "#{controller_name}-#{action_name}"}
    - if content_for? :header
      = yield :header
    - else
      = render 'shared/advanced_search'
      = render 'shared/navbar'

    #content-wrapper
      = render 'shared/search_bar', simple_search_bar: true

      = image_tag 'member-page-bg.png', alt: '', width: '100%'

      #main-content.container(style='position: relative;')
        .sidebar-toggle.visible-xs
          %button.btn-flat.btn-sm{"data-toggle" => "offcanvas", :type => "button"}
            Toggle Sidebar
            %i.glyphicon.glyphicon-chevron-right
        .row
          .row-offcanvas.row-offcanvas-left
            = render 'member/shared/sidebar'

            .col-xs-12.col-sm-9
              = yield

    = render 'shared/footer'

    = render 'shared/session_popup' unless user_signed_in?
    = render 'shared/enquiry_popup'
