$(function() {
  $(document.body).append('<%=j render partial: 'finances/form' %>');

  var $form = $('#finance_form');
  $('.select-general', $form).generalSelect();
  $('.select-currency', $form).currencySelect();
  $('.country-select', $form).countrySelect();

  $form.simpleAjaxForm(function($form) {
    $('.alert', $form).remove();
    $('#finance_result_popup').displayPopup();
  });

});
