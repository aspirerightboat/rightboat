.member-content(data-layout-mode='list')
  %h1 My Alerts
  %hr
  = form_for [:member, @user_alert] do |f|
    .form-group
      = f.check_box :favorites
      = f.label :favorites, 'Email me if my favourites change status'
    .form-group
      = f.check_box :saved_searches
      = f.label :saved_searches, 'Email me if new listings match my saved searches'
    .form-group
      = f.check_box :suggestions, checked: false, disabled: true
      = f.label :suggestions, 'Email me suggestions (Coming soon!)'
    .form-group
      = f.check_box :newsletter, checked: false, disabled: true
      = f.label :newsletter, 'Email me the Rightboat newsletter (Coming soon!)'
    .row
      .col-xs-6.col-sm-4
        %button.btn-flat.btn-black(type="submit") Save Changes
