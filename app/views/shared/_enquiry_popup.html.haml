#enquiry_popup.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close(aria-label="Close" data-dismiss="modal" type="button")
          %span(aria-hidden="true") &times;
        .h Request Details
      .modal-body
        %p
          Your enquiry will be forwarded to the selling broker.
          The full boat specification and broker details will be available
          for immediate viewing in #{link_to 'My Rightboat', member_enquiries_path, class: 'bold-link'}.

        = form_tag request_details_path(@boat.slug), class: 'enquiry-form simple-ajax-form', remote: true, data: {format: :json, boat_slug: @boat.slug} do
          - unless current_user
            .row
              .col-xs-12
                .form-group
                  = check_box_tag :have_account, nil, false, class: 'checkbox-toggler', data: {toggle_class: '.ha-toggle'}
                  = label_tag :have_account, 'Already a Member?'
            .row.ha-toggle
              .col-sm-2.col-xs-12
                .form-group
                  = select_tag :title, options_for_select(User::TITLES, current_user.try(:title)), prompt: 'Title', class: 'select-title', id: 'enquiry_title'
              .col-sm-4.col-xs-12
                .form-group
                  = text_field_tag :first_name, current_user.try(:first_name), placeholder: 'First name', class: 'form-control', 'data-validetta' => 'required', id: 'enquiry_first_name'
              .col-sm-6.col-xs-12
                .form-group
                  = text_field_tag :surname, current_user.try(:last_name), placeholder: 'Last name', class: 'form-control', 'data-validetta' => 'required', id: 'enquiry_last_name'
            .row
              .col-sm-6.col-xs-12
                .form-group
                  = email_field_tag :email, current_user.try(:email), placeholder: 'Email', class: 'form-control', 'data-validetta' => 'required,email', id: 'enquiry_email'
              .col-sm-6.col-xs-12.ha-toggle
                .form-group
                  .rb-control-group
                    .rb-control-group-addon
                      = select_tag :country_code, options_for_country_code, prompt: 'Country Code', class: 'select-white select-sm country-code-select', id: 'enquiry_country_code'
                    .rb-control
                      = text_field_tag :phone, current_user.try(:phone) || current_user.try(:mobile), placeholder: 'Phone', class: 'form-control', id: 'enquiry_phone'
              .col-sm-6.col-xs-12.ha-toggle.hidden
                .form-group
                  = password_field_tag :password, '', placeholder: 'Password', class: 'form-control' #, 'data-validetta' => 'required'
            .row.ha-toggle.hidden
              .col-xs-12
                .form-group
                  = check_box_tag :remember_me, true
                  = label_tag :remember_me
          .row
            .col-xs-12
              .form-group
                = text_area_tag :message, '', placeholder: 'Comments', class: 'form-control'
          .row
            -#.col-xs-12.col-sm-6
            -#  .form-group
            -#    .input-group.captcha-input
            -#      %label.input-group-addon(for="captcha")
            -#        %img.captcha-img
            -#      = hidden_field_tag :captcha_key
            -#      = text_field_tag :captcha, '', placeholder: 'Prove you are human', class: 'form-control', 'data-validetta' => 'required,number'
            .col-sm-6.col-xs-12
              %button.btn-flat.btn-block(type="submit")
                %span.ha-toggle Send
                - unless current_user
                  %span.ha-toggle.hidden Login & Send

#enquiry_result_popup.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close(aria-label="Close" data-dismiss="modal" type="button")
          %span(aria-hidden="true") &times;
        .h Message Sent
      .modal-body
        %p
          Thank you for your enquiry

        #logged_in_result
          %p
            The seller's details are: <b id="broker_name"></b><b id="broker_phone"></b>
            and they will be in touch.
            %br
            A downloadable PDF is available in #{link_to 'My Requests', member_enquiries_path, class: 'bold-link'}
            within #{link_to 'My Rightboat', member_root_path, class: 'bold-link'}
            and a copy has also been sent to your email address.
          %p
            = link_to 'View PDF', '#', id: 'pdf_link', class: 'btn-flat btn-black'
          .row.text-center
            %h4.similar-boats-link= link_to 'Similar Boats', '#'
            .similar-boats.row
        - unless current_user
          #logged_out_result.hidden
            %p
              To view the full specification and PDF in #{link_to 'My Rightboat', member_enquiries_path, class: 'bold-link'}
              simply enter a password:

            = form_tag signup_and_view_pdf_path, class: 'signup-for-pdf-form simple-ajax-form p', remote: true, data: {format: :json} do
              = hidden_field_tag :email, nil, id: 'signup_email'
              = hidden_field_tag :title, nil, id: 'signup_title'
              = hidden_field_tag :first_name, nil, id: 'signup_first_name'
              = hidden_field_tag :last_name, nil, id: 'signup_last_name'
              = hidden_field_tag :phone, nil, id: 'signup_phone'
              = hidden_field_tag :boat_id, nil, id: 'signup_boat'
              .row
                .col-sm-6.col-xs-12
                  .form-group
                    = password_field_tag :password, '', placeholder: 'Password', class: 'form-control', 'data-validetta' => 'required'
                .col-sm-6.col-xs-12
                  .form-group
                    = password_field_tag :password_confirmation, '', placeholder: 'Password Confirm', class: 'form-control', 'data-validetta' => 'required'
              .row
                .col-sm-6.col-xs-12
                  %button.btn-flat.btn-black(type="submit") View now

            %p
              Membership to My Rightboat is completely <abbr class="open-features-popup open-popup-text">FREE</abbr> â€” we will never charge you.
            %p
              = link_to 'Privacy policy', privacy_policy_home_path, target: '_blank'

