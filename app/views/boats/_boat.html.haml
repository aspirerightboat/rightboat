.boat-thumb-container.col-md-4.col-sm-6.col-xs-12
  .boat-thumb.thumbnail{'data-boat-ref' => boat.slug, 'data-length' => boat.length_m.to_f, 'data-price' => boat.poa? ? nil : Currency.convert(boat.price, boat.currency, Currency.default)}
    .boat-img-thumb
      = link_to manufacturer_model_boat_path(boat.slug, manufacturer_id: boat.manufacturer.slug, model_id: boat.model.slug) do
        = image_tag boat.primary_image.file.url(:thumb)
    .caption
      %h4.text-uppercase= boat.manufacturer
      %h5= boat.model
      .boat-detail-item.boat-price
        %span(data-attr-name='price')= boat_price(boat)
        %span.tax-status.small= boat.tax_paid? ? 'Tax paid' : ''
      .boat-detail-item.boat-length
        %span Length:
        %span(data-attr-name='loa')= boat_length(boat)
      .boat-detail-item
        %span Year: #{boat.year_built}
      .boat-location-1
        %span Location: #{boat.full_location}
      /.boat-detail-item.boat-location-2
      /  %span Location: #{boat.full_location}
      - unless local_assigns[:disable_social_links]
        .boat-social-links
          = favourite_link_to boat, 'Favourite'
          .share-link
            %span Share
            %span.share-platforms
              = link_to "https://www.facebook.com/sharer.php?u=#{URI::escape(manufacturer_model_boat_url(boat.slug, manufacturer_id: boat.manufacturer.slug, model_id: boat.model.slug))}", target: '_blank', title: 'Share with facebook' do
                %i.icon.icon-facebook-squared
              = link_to "https://www.twitter.com/intent/tweet?url=#{URI::escape(manufacturer_model_boat_url(boat.slug, manufacturer_id: boat.manufacturer.slug, model_id: boat.model.slug))}", target: '_blank', title: 'Share with twitter' do
                %i.icon.icon-twitter-squared
              = link_to "mailto:?subject=I want you to see this site&body=Check out this site #{manufacturer_model_boat_url(boat.slug, manufacturer_id: boat.manufacturer.slug, model_id: boat.model.slug)}", target: '_blank', title: 'Share by email' do
                %i.icon.icon-mail
          = link_to 'Request Details', '#', class: 'btn-flat pull-right request-details'
      = yield if block_given?
      .clearfix