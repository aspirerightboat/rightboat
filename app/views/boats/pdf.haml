- broker = @boat.user
.broker-info-block
  - if broker.avatar?
    .broker-logo
      = wicked_pdf_image_tag broker.avatar_url, height: 100
  .broker-info
    %p Broker Details:
    %p
      %strong= broker.name
      %br
      = broker.address
    %p
      - if broker.phone.present?
        = broker.phone
        %br
      - if broker.mobile.present?
        = broker.mobile
        %br
      - if broker.fax.present?
        = broker.fax
        %br
      = mail_to broker.email
      %br
      - if broker.company_weburl.present?
        = link_to broker.company_weburl, broker.company_weburl
        %br

- if @boat.primary_image
  .boat-main-image
    = wicked_pdf_image_tag @boat.primary_image.file_url(:main)

.boat-title-block
  %h1 <b>#{@boat.manufacturer}</b> #{@boat.model}
  %h2 #{@boat.display_price(Currency.where(name: 'GBP').first)}
  %h2 #{@boat.year_built} year
  .qr-code-block
    - boat_url = boat_for_sale_url(manufacturer: @boat.manufacturer.slug, model: @boat.model.slug)
    = render partial: 'shared/qr_code', locals: {url: boat_url, size: 6}
    .qr-code-hint Scan to view boat online
.hr

%table.spec-table
  - @boat.spec_attributes(self, true).each_slice(2).each do |spec1, spec2|
    %tr
      %td(width="25%")
        %div
          %strong= spec1[0]
      %td(width="25%")
        %div= spec1[1]
      - if spec2
        %td(width="25%")
          %div
            %strong= spec2[0]
        %td(width="25%")
          %div= spec2[1]

%h3 Description
.boat-description
  = sanitize(@boat.description)

%h3 Images
.boat-thumbs
  - @boat.slave_images.each_slice(2) do |slice|
    .thumbs-row
      - slice.each do |img|
        .thumb= wicked_pdf_image_tag img.file_url(:thumb)
