- unless @categories.blank?
  %h2 Filter our news
  %ul.article-categories
    - @categories.each do |category|
      %li{ class: "#{@category == category ? 'active' : ''}" }
        = link_to articles_path(category_id: category) do
          %span.article-category= category.name
          %span= "(#{category.articles_count})"