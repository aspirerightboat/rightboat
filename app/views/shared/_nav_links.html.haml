- if user_signed_in?
  %li.dropdown.rb-dropdown
    %a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expaned="false")
      Welcome #{current_user.first_name}
    %ul.dropdown-menu
      %li= link_to 'Log Out', destroy_user_session_path, method: :delete
- else
  %li= link_to 'Sign in or Create an Account', '#', class: 'user-login login-top'
%li= link_to 'My Rightboat', member_root_path, data: { 'require-login' => true, 'login-title' => 'To use my Rightboat, you must first Join as a Member.' }
- if user_signed_in? && current_user.company?
  %li= link_to 'Broker Area', broker_area_path
