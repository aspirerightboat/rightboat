#qc_reason_popup.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close(aria-label="Close" data-dismiss="modal" type="button")
          %span(aria-hidden="true") &times;
        .h Reason for Quality Check Request
      .modal-body
        = form_for @enquiry, url: quality_check_path(@enquiry), method: :post do |f|
          .row
            .form-group
              = f.label :bad_quality_reason, 'Why this lead has bad quality:'
              = f.select :bad_quality_reason, Enquiry::BAD_QUALITY_REASONS.map { |r| [r.titleize, r] }, {prompt: 'Please select...'}, class: 'select-white select-sm cool-select', id: 'bad_quality_select'
          .row
            .form-group.hidden#bad_quality_comment
              = f.label :bad_quality_comment, 'Why you think this lead is invalid:'
              = f.text_area :bad_quality_comment, class: 'form-control'
          .row
            %button.btn-flat.btn-full(type="submit") Send
