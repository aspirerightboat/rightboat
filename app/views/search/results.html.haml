- content_for :header_text do
  %h1
    %span.hidden-sm Find your
    %strong Rightboat
  %h3
    Search Results:
    %strong= @boats.total_count >= 10000 ? "10,000 plus" : @boats.total_count
    %span.hidden-sm boats for sale

- content_for :header do
  = render 'shared/advanced_search'
  = render 'shared/navbar'

= render 'shared/search_bar'
#main-content.container
  - if @boats.length > 0
    #boats-list.row(data-layout-mode="#{current_layout_mode}")
      - if @boats.total_count >= 10000
        %p.over-limit.lead.text-center Your search resulted in 10,000 plus boats. Please refine your search.
      - else
        = render @boats
    - if @boats.total_pages > 1
      .row
        = link_to '#', class: 'view-more-link' do
          %span VIEW MORE
          %span
            %i.glyphicon.glyphicon-chevron-down
  - else
    %p.lead.text-center No boats were found matching your search criteria. Please try again.

