!!!
%html
  %head
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title= @page_title.present? ? "#{@page_title} | Rightboat" : 'Rightboat'
    = favicon_link_tag "/favicon.png", type: 'image/png'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://maps.google.com/maps/api/js?sensor=false'
    = csrf_meta_tags
  %body{id: "#{controller_name}-#{action_name}"}
    - if cookies[:visited].nil?
      = render 'shared/cookies_warning'
    - if content_for? :header
      = yield :header
    - else
      = render 'shared/navbar'


    #content-wrapper
      = yield

    = render 'shared/footer'

    = render 'shared/session_popup' unless user_signed_in?
    = render 'shared/enquiry_popup'
    = render 'shared/phone_popup'
    - if user_signed_in?
      = render 'berth_enquiries/form'