#search-wrapper.navbar-static-top
  #home-search.container
    = image_tag 'logo.png', alt: 'Rightboat', class: 'logo-img'
    #home-search-form
      %h2
        The <strong>global choice</strong><br/>
        of boats for sale

      = form_tag search_path, method: :get do
        = hidden_field_tag :price_min, params[:price_min]
        = hidden_field_tag :price_max, params[:price_max]
        = hidden_field_tag :length_min, params[:length_min]
        = hidden_field_tag :length_max, params[:length_max]

        .top-border-wrapper
          .top-border
        .bordered-wrapper
          .left-border-wrapper
            .left-border
          .bottom-border-wrapper
          #boat-types.form-group.pull-right
            = radio_button_tag :boat_type, '', params[:boat_type].blank?, id: 'boat_type_all'
            = label_tag :boat_type_all, 'All', for: 'boat_type_all'
            = radio_button_tag :boat_type, 'power', params[:boat_type].to_s.downcase == 'power'
            = label_tag :boat_type_power, 'Power', for: 'boat_type_power'
            = radio_button_tag :boat_type, 'sail', params[:boat_type].to_s.downcase == 'sail'
            = label_tag :boat_type_sail, 'Sail', for: 'boat_type_sail'

          .clearfix
          .form-group.row
            .col-xs-12= text_field_tag :q, '', placeholder: 'Search', class: 'form-control', id: 'search-input'

          .range-slider-wrapper.row
            .col-xs-3= label_tag :price
            .col-xs-9
              .rb-control-group
                .rb-control
                  = slider_tag(:price, html: { 'data-convert' => 'convertCurrency' })
                .rb-control-group-addon
                  = currency_tag :currency, current_currency, class: 'select-sm'
          .range-slider-wrapper.row
            .col-xs-3= label_tag :length
            .col-xs-9
              .rb-control-group.length-input-group
                .rb-control
                  = slider_tag(:length, unit: current_length_unit, html: { 'data-convert' => 'convertLength' })
                .rb-control-group-addon
                  = select_tag :length_unit, options_for_select(['ft', 'm'], current_length_unit), class: 'select-sm'
          .row
            .col-xs-12.nice-buttons.last-row-pad
              %button.transparent-button.reset-search-form(type="button") Reset
              %button.nice-button(type="submit") Search

        .form-group.row
          .nice-buttons(style="margin: 10px 0")
            %button.nice-button.toggle-adv-search Refine Search
          %h3
            Find your<br/>
            <strong>Rightboat</strong>
:javascript
  $(function() {
    $("#home-search select").select2({
      minimumResultsForSearch: Infinity
      //templateResult: formatState
    });
  });